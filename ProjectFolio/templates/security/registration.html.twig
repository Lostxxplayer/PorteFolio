{% extends 'base.html.twig' %}


{% block body %}
<h1> Inscription</h1>
{{ form_start(form) }}
{{ form_row(form.username, {'label':"Nom D'utilisateur",'attr': {'placeholder': 'Username'}}) }}
{{ form_row(form.email, {'label':"Votre Email",'attr': {'placeholder': 'Adresse email ...'}}) }}
{{ form_row(form.password, {'label':"Mot de passe",'attr': {'placeholder': 'Mot de passe!'}}) }}
{{ form_row(form.confirm_password, {'label':"Confirmer votre Mot de passe",'attr': {'placeholder': 'Confirmation du mot de passe'}}) }}
<button type="submit" class="btn btn-success">Valider L'Inscription !</button>
{{ form_end(form) }}
{% endblock %}